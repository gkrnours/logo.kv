#:kivy 1.0.9
#:import cmd command

<Command@BoxLayout>:
    size_hint: 1, None
    height: btn.height
    orientation: 'horizontal'
    callback: lambda x: x
    label_txt: "egg"
    Label:
        size_hint: 2, None
        height: btn.height
        text_size: self.size
        shorten: True
        text: self.parent.label_txt
    TextInput:
        id: txt
        size_hint: 5, None
        height: btn.height
        multiline: False
        on_text_validate: self.parent.callback(self.text)
    Button:
        id: btn
        size_hint: 1, None
        height: 32
        text: ">"
        on_press: self.parent.callback(txt.text)

<Title@Label>:
    size_hint: 1, None
    height: 32
    text_size: self.size
    shorten: True


<Turtle>:
    size_hint: None, None
    size: 32, 32
    r: 0
    relative_x: self.x - self.parent.center_x
    relative_y: self.y - self.parent.center_y
    relative_pos: (self.relative_x, self.relative_y)
    canvas:
        Rectangle:
            source: 'turtle.png'
            size: self.size
            pos: self.pos
    canvas.before:
        PushMatrix
        Rotate:
            angle: -self.r
            axis: 0, 0, 1
            origin: self.center
    canvas.after:
        PopMatrix

<TurtleDisplay@Widget>:
    size_hint: 3, 1
    canvas:
        Color:
            hsv: 46/360., .11, .93
        Rectangle:
            size: self.size
            pos: self.pos

<CommandBox@BoxLayout>:
    orientation: 'vertical'
    canvas:
        Color:
            hsv: 192/360., 1, .21
        Rectangle:
            size: self.size
            pos: self.pos

<AppLayout@BoxLayout>:
    size: root.size
    pos: root.pos
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1, 3
        TurtleDisplay:
            id: 'view'
            Turtle:
                id: turtle
                pos: self.parent.center
        CommandBox:
            id: 'ctrl'
            padding: 4
            spacing: 2
            Command:
                label_txt: "sety"
                callback: turtle.sety
            Command:
                label_txt: "seth"
                callback: turtle.seth
            Command:
                label_txt: "fd"
                callback: turtle.fd
            Command:
                label_txt: "bk"
                callback: turtle.bk
            Command:
                label_txt: "lt"
                callback: turtle.lt
            Command:
                label_txt: "rt"
                callback: turtle.rt
            Title:
                text: "Primitive"
            CommandCardDispenser:
                card: cmd.NumberCard
            Title:
                text: "Turtle"
            CommandCardDispenser:
                card: cmd.FdCard
            Widget:
    Timeline:
        id: timeline
        BoxLayout:
            height: self.parent.height
            width: 64
            padding: 8
            spacing: 8
            orientation: 'vertical'
            Button:
                width: 48
                height: 48
                size_hint: None, None
                background_color: 133/255., 153/255., 0, 1
                text: "play"
            Slider:
                orientation: 'vertical'

